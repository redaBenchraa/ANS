<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/post_file_request_imageGroup" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="groupName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/groupName"
                        android:textSize="18sp"
                        android:textColor="?attr/colorControlNormal"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_weight="1" />

                    <TextView
                        android:text="2 min ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:layout_weight="0" />
                </LinearLayout>

                <TextView
                    android:text="Published"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/published"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@android:color/background_dark" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:text="Lorem ipsum dolor sit amet, ne feugait prodesset eos. Nam ut sonet partem, omnes consul vituperatoribus."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_file_request_text" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="File request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_file_request_fileName"
            android:layout_weight="1"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_margin="0dp"
            android:paddingRight="10dp"
            android:textStyle="normal|bold"
            android:textAlignment="textStart" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_file_request_downloadButton"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/download" />

            <Button
                android:text="@string/post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_file_request_previewButton"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

    </LinearLayout>
    <View android:layout_width="fill_parent" android:layout_height="2dp" android:background="?android:attr/colorButtonNormal"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_upDown">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_thumbup_activated"
                android:id="@+id/imageView4" />

            <TextView
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/post_file_request_ups"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_thumdown"
                android:id="@+id/imageView5" />

            <TextView
                android:text="12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/post_file_request_downs"
                android:gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>